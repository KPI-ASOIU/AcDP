          </div>
          <a href="<%=user_path(user)%>" class="ui small image">
            <img src="<%=user.avatar.url("medium")%>">
          </a>
          
          <div class="content">
		<div class="header"> <a href="<%=user_path(user)%>" <%= user.full_name %></a></div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="ui basic segment">
      <%= paginate @contacts %>
    </div>
