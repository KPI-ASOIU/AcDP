$("#day").html("<%= escape_javascript render partial: 'calendar/day_header', locals: {date: @date} %>");
<% if can? :crud, Task %>
  $(".task_list").html("<%= escape_javascript render partial: 'tasks/task_list', locals: {tasks: @tasks} %>");
<% end %>
$(".event_list").html("<%= escape_javascript render partial: 'events/event_list', locals: {events: @events} %>");
$(".selected").removeClass("selected");
$("#<%= @date %>").addClass("selected");