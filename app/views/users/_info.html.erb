<div class="panel-heading">
  <h3 class="panel-title"><%= t('users.my_page') %></h3>
</div>
<div class="panel-body">
  <div class="pull-left">
    <div class="thumbnail">
      <%= image_tag @user.avatar.url("large"), class: 'c-user-large-avatar' %>
    </div>
  </div>
  <div class="pull-left break-words">
    <% if @user.full_name.present? %>
      <h3 class="text-center"><%=  @user.full_name %></h3>
    <% end %>
    <dl class="dl-horizontal">
      <dt><%=  t('activerecord.attributes.user.login') %></dt>
      <dd><%=  @user.login %></dd>
      <dt><%=  t('activerecord.attributes.user.role') %></dt>
      <dd><%=  format_roles(@user.roles, ", ") %></dd>
      <dt><%=  t('activerecord.attributes.user.full_name') %></dt>
      <dd><%=  @user.full_name %></dd>
      <dt><%= t('activerecord.attributes.user.email')  %></dt>
      <dd><%=  @user.email %></dd>
      <dt><%= t('activerecord.attributes.user.position')  %></dt>
      <dd><%=  @user.position %></dd>
    </dl>
  </div>
  <div class="pull-left break-words">
    <dl class="dl-horizontal">
      <dt><%= t('activerecord.attributes.user.about_me')  %></dt>
      <dd><%=  @user.about_me %></dd>
    </dl>
  </div>
</div>
