<% if not @events.empty? %>
  <div id="eventSearch" class="ui fluid accordion no-user-select">
    <div class="title">
      <i class="dropdown icon"></i>
      <%= t('util.extended_search') %>
    </div>
    <div class="content">
      <div id="collapseOne" class="panel-collapse collapse">
        <div class="panel-body">
          <%= render 'extended_search' %>        
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if not @events.empty? %>
  <table id="events" class="ui table segment">
    <%= render partial: 'search_header', locals: { events: @events } %>
    <%= render partial: 'search_results', locals: { events: @events } %>
  </table>
<% else %>
  <p class="ui message info no-conversations"><%= t('events.no_events') %></p>
  <%= link_to t('events.create_event'), new_event_path, class: 'ui positive button' %>
<% end %>