<%= form_tag events_path, :method => 'get', remote: true, id: 'extendSearch', class: 'ui fluid form segment' do %>
  <%= hidden_field_tag :search, "true" %>
  <div class="four fields">
    <div class="field">
      <%= t('events.author') %>:
      <%= select_tag :author, options_for_select(
        [[t('util.I'), current_user.id],
        [t('util.not_I'), events_not_authored_by_me]].concat(all_authors_of_my_events)),
        { class: "ui fluid search dropdown", multiple: true } %>
    </div>
    <div class="field">
      <%= t('events.guests') %>:
      <%= select_tag :invited, options_for_select(
        [[t('util.I'), current_user.id],
        [t('util.not_I'), events_not_visited_by_me]].concat(all_visitors)),
        { class: "ui fluid search dropdown", multiple: true } %>
    </div>
    <div class="field">
      <%= t('events.name') %>:
      <div class="ui icon input">
        <%= text_field_tag :name, nil %>
        <i class="icon remove"></i>
      </div>
    </div>
    <div class="field">
      <%= t('events.place') %>:
      <div class="ui icon input">
        <%= text_field_tag :place, nil %>
        <i class="icon remove"></i>
      </div>
    </div>
  </div>
  <div class="four fields">
    <div class="field">
      <%= t('events.hosted_from') %>:
      <div class="ui icon input">
        <%= text_field_tag :event_start_date, nil, class: "date", id: "startDate" %>
        <i class="icon remove clear-date first"></i>
      </div>
    </div>
    <div class="field">
      <%= t('events.hosted_to') %>:
      <div class="ui icon input">
        <%= text_field_tag :event_end_date, nil, class: "date", id: "endDate" %>
        <i class="icon remove clear-date"></i>
      </div>
    </div>
    <div class="field">
      <%= t('tasks.created_from') %>:
      <div class="ui icon input">
        <%= text_field_tag :creation_start_date, nil, class: "date", id: "creationStartDate" %>
        <i class="icon remove clear-date first"></i>
      </div>
    </div>
    <div class="field">
      <%= t('tasks.created_from') %>:
      <div class="ui icon input">
        <%= text_field_tag :creation_end_date, nil, class: "date", id: "creationEndDate" %>
        <i class="icon remove clear-date"></i>
      </div>
    </div>
  </div>
  <div id="searchBtn" class="ui blue labeled icon submit button">
    <i class="search icon"></i>
    <%= t('util.search') %>
  </div>
<% end %>