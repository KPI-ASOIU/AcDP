<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "sign-in-form ui form segment"}) do |f| %>
  <h3 class="ui header">Авторизація</h3>
  <div class="field">
    <%= f.label :login %>
    <div class="ui left labeled icon input">
      <%= f.text_field :login, :autofocus => true, :class => "form-control" %>
      <i class="user icon"></i>
    </div>
  </div>
  <div class="field">
    <%= f.label :password %>
    <div class="ui left labeled icon input">
      <%= f.password_field :password, :class => "form-control" %>
      <i class="lock icon"></i>
    </div>
  </div>
  <%= f.submit "Вхід в систему" , :class => "ui blue submit button" %>
<% end %>

<div class="">
</div>
