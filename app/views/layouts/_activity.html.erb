<div class="activity">
  <div class="body">
    <div class="mega-icon">
    <%= timeago_tag a.created_at, :nojs => true, :limit => 1.hours.ago,
        title: proc { |time, options| I18n.l time, :format => "%H:%M:%S" } %>
    <div class="title">
      <% if a.owner %>
        <%= link_to a.owner.full_name, a.owner %>
      <% else %>
      <% end %>
      <%= content_for :action %>
    </div>
    <div class="details">
      <div class="avatar">
        <% if a.owner %>
          <%= link_to image_tag((author = a.owner).avatar.url("small"), class: 'img-thumbnail c-user-small-avatar',
            title: author.full_name), user_path(author.id) %>
        <% end %>
      </div>
      <%= yield %>
    </div>
</div>
