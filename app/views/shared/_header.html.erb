<div class="row">
  <div class="col-xs-12">
    <nav class="navbar navbar-default" role="navigation">
      <div class="navbar-header">
        <%= link_to t('views.main_title'), root_path, class: "navbar-brand" %>
      </div>
      <ul class="nav navbar-nav">
        <li><% if can? :manage, @users %>
                <%= link_to t('util.users_manage'), admin_users_path %>
            <% end %>
        </li>
        <% if user_signed_in? %>
          <li>
            <%=link_to t('users.my_page'), current_user%>
          </li>
        <% end %>
      </ul>
      <% if user_signed_in? %>
          <p class="navbar-text navbar-right log-out-link"><%= current_user.login + ' (' %><%= link_to t('util.logout'), destroy_user_session_path, :method => :delete, class: "navbar-link" %>)</p>
      <% end %>
    </nav>
  </div>
</div>
