<div class='comments-form'>
  <% if current_user %>
    <%= form_for Comment.new, :remote => true do |f| %>
      <p>
        <%= f.text_area :body, class: 'new-comment form-control', placeholder: t('comments.new_comment') << '...' %>
      </p>
      <%= hidden_field_tag :commentable_id, commentable.id %>
      <%= hidden_field_tag :commentable_type, commentable.class.base_class.name.to_s %>
      <%= f.submit t('comments.send_comment'), class: 'btn btn-default form-control' %>
    <% end %>
  <% else %>
    <p>
      Must be logged in to comment.
    </p>
  <% end %>
</div>
