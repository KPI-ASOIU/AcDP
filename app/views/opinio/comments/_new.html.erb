<% if current_user %>
  <%= form_for Comment.new, :remote => true, html: { class: 'ui reply form' } do |f| %>
    <%= f.text_area :body, id: 'newComment', class: 'new-comment field', placeholder: t('comments.new_comment') << '...' %>
    <%= hidden_field_tag :commentable_id, commentable.id %>
    <%= hidden_field_tag :commentable_type, commentable.class.base_class.name.to_s %>
    <%= content_tag :button, type: :submit, class: 'ui fluid teal submit button' do %>
      <%= t('comments.send_comment') %>
    <% end %>
  <% end %>
<% else %>
  <p>
    Must be logged in to comment.
  </p>
<% end %>
