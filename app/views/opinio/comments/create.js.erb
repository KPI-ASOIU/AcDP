comment_box = $("#comments")
comment_box.scrollTop(0);

var comment = {
	html: '<%= escape_javascript( render @comment ) %>',
	id: '<%= @comment.id %>'
}

$('#no_comments').fadeOut()
$('#comments .jspPane').prepend(comment.html)
$("time[data-time-ago]").timeago()
$('#comment_' + comment.id).hide().fadeIn('slow')
