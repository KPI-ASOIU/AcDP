<div id="modal_add_folder" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title"><%= t('documents.adding_folder') %></h4>
      </div>
      <%= form_for(:documents, :html => { :class => "form-vertical", role: "form" }) do |f| %>
          <div class="modal-body">
            <div id="role" class="form-group">
              <%= f.hidden_field :doctype, value: 'folder' %>
              <%= label_tag :new_doc_title, t('documents.enter_folder_title'), :class=>'col-sm-0 control-label' %>
              <%= f.text_field :new_doc_title, :placeholder => t('documents.title') + '...', :class => 'form-control' %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('util.cancel') %></button>
            <%= f.submit t('util.save'), :class => "btn btn-success" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
