<div class="items">
  <%= f.nested_fields_for :checklists do |f| %>
    <fieldset class="item">
      <%= f.check_box :done %>
      <%= f.text_field :name %>

      <a href="#" class="remove">remove</a>

      <%= f.hidden_field :id %>
      <%= f.hidden_field :_destroy %>
    </fieldset>
  <% end %>
</div>
<a href="#" class="add">add checklist</a>