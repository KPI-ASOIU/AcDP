<div class="items">
  <%= f.nested_fields_for :checklists do |f| %>
    <fieldset class="item">
      <div class='input-group'>
	  	  <span class="input-group-addon">
	  	  	<%= f.check_box :done %>
	  	  </span>
	      <%= f.text_field :name, class: 'form-controlTa' %>
	      <span class="input-group-addon">
	      	<a href="#" class="remove">
	      	  <span class="text-color-grey glyphicon glyphicon-remove"></span>
	      	</a>
	      </span>
	  </div>
      
      <%= f.hidden_field :id %>
      <%= f.hidden_field :_destroy %>
    </fieldset>
  <% end %>
</div>
<a href="#" class="text-color-grey btn btn-default add"><span class='glyphicon glyphicon-plus'></span> Add Item</a>
