
  <% if not tasks.empty? %>
    <table class="tasks table table-hover table-verticle-centered">
      <%= render partial: 'tasks/search_header_calendar', locals: { tasks: tasks } %>
      <tbody id="tasks">
        <%= render partial: 'tasks/search_results_calendar', locals: { tasks: tasks } %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center text-muted no-conversations"><%= t('tasks.no_tasks_calendar') %></p>
  <% end %>
</div>