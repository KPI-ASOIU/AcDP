<%= form_for :task, url: tasks_path do |f| %>
  <div class="panel-body">
    <div class="form-group">
      <%= f.label :name, :class=>'col-sm-4 control-label' %>
      <div class="col-sm-8">
          <%= f.text_field :name, :placeholder => t('tasks.name') + '...', :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, :class=>'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :description, :placeholder => t('tasks.description') + '...', :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :end_date, :class=>'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :end_date, :placeholder => t('tasks.end_date') + '...', :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :status, :class=>'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :status, :placeholder => t('tasks.status') + '...', :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :check_list, :class=>'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :check_list, :placeholder => t('tasks.check_list') + '...', :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="panel-footer text-right">
    <%= link_to t('util.back'), :back, :class => "btn btn-default" %>
    <%= f.submit :class => "btn btn-success" %>
  </div>
<% end %>
