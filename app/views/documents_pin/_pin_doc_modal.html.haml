#addDocModal.ui.modal
  %i.close.icon
  .header
    = modal_title
  #content.content
    #searchDocForm.ui.fluid.form.segment{data: { 'search-url' => doc_search_path(format: :json) }}
      .field
        = label_tag t('documents.title')
        = text_field_tag '', '', id: 'title', data: { id: 'docSearch' }
      .field
        = label_tag t('documents.description')
        = text_field_tag '', '', id: 'description', data: { id: 'docSearch' }
      = button_tag t('documents.pin'), id: "pinDocs", class: "ui positive button"
    #docSearchResults.ui.items
      