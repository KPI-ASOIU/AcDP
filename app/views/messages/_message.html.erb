<div class="list-group-item">
  <%= link_to user_path(message.author), class: 'thumbnail' do %>
    <%= image_tag message.author.avatar.url, class: 'avatar-message-size', alt: message.author.full_name %>
  <% end %>
  <%= timeago_tag message.created_at, :nojs => true, :limit => 1.hours.ago,
      title: proc { |time, options| I18n.l time, :format => "%H:%M:%S" } %>
  <h5 class="list-group-item-heading message-author"><%= link_to message.author.full_name, user_path(message.author) %></h5>
  <div class="list-group-item-text"><%= message.body %></div>
</div>
