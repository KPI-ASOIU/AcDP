<div class="message">
	<%= image_tag message.author.avatar.url, class: 'avatar-message-size pull-left' %>
	<div class="author_part">
    <%= timeago_tag message.created_at, :nojs => true, :limit => 1.hours.ago, 
      title: proc { |time, options| I18n.l time, :format => "%H:%M:%S" } %>
		<div class="m_author"><%= message.author.full_name %></div>
	</div>
	<div class="m_body"><%= message.body %></div>
</div>
