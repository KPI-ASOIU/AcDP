<div class="panel panel-primary panel-narrow">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('users.user_info') %></h3>
  </div>
  <div class="panel-body">
    <table class="dl-horizontal" width="100%">
      <tr>
          <td align="right"><b><%= t('activerecord.attributes.user.login') %>:&nbsp</b></td>
          <td><%= @user.login %></td>
          <td rowspan="4"><%= image_tag @user.avatar.url("large") %></td>
      </tr>
      <tr>
          <td align="right"><b><%= t('activerecord.attributes.user.role') %>:&nbsp</b></td>
          <td><%= @user.role %></td>
      </tr>
      <tr>
          <td align="right"><b><%= t('activerecord.attributes.user.full_name') %>:&nbsp</b></td>
          <td><%= @user.full_name %></td>
      </tr>
      <tr>
          <td align="right"><b><%= t('activerecord.attributes.user.email') %>:&nbsp</b></td>
          <td><%= @user.email %></td>
      </tr>
    </table>
  </div>
  <div class="panel-footer text-right">
    <%= link_to t('util.back'), admin_users_path, :class => "btn btn-default" %>
    <%= link_to edit_admin_user_path(@user), :class => "btn btn-warning" do %>
        <span class='glyphicon glyphicon-pencil'></span>
        <%= t('util.edit') %>
    <% end %>
  </div>
</div>
