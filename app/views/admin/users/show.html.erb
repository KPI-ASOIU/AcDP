<div class="panel panel-primary panel-narrow">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('users.user_info') %></h3>
  </div>
  <div class="panel-body">
    <%= render partial: "shared/send_message_modal" %>
    <div class="pull-left">
      <% if @user.full_name.present? %>
        <h3 class="text-center"><%=  @user.full_name %></h3>
      <% end %>
      <dl class="dl-horizontal">
        <dt><%=  t('activerecord.attributes.user.login') %></dt>
        <dd><%=  @user.login %></dd>
        <dt><%=  t('activerecord.attributes.user.role') %></dt>
        <dd><%=  format_roles(@user.roles, ", ") %></dd>
        <dt><%=  t('activerecord.attributes.user.full_name') %></dt>
        <dd><%=  @user.full_name %></dd>
        <dt><%=  t('activerecord.attributes.user.email')  %></dt>
        <dd><%=  @user.email %></dd>
        <dt><%=  t('activerecord.attributes.user.position')  %></dt>
        <dd><%=  @user.position %></dd>
      </dl>
    </div>
  </div>
  <div class="panel-footer text-right">
    <%= link_to t('util.back'), admin_users_path, :class => "btn btn-default" %>
    <%= link_to edit_admin_user_path(@user), :class => "btn btn-warning" do %>
        <span class='glyphicon glyphicon-pencil'></span>
        <%= t('util.edit') %>
    <% end %>
  </div>
</div>
