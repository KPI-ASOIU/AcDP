<h1><%= t('util.user_list') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.user.login') %></th>
      <th><%= t('activerecord.attributes.user.role') %></th>
      <th><%= t('activerecord.attributes.user.full_name') %></th>
      <th><%= t('activerecord.attributes.user.email') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%=  user.login %></td>
        <td><%=  user.role %></td>
        <td><%=  user.full_name %></td>
        <td><%=  user.email %></td>
        <td><%= link_to t('util.show'), admin_user_path(user) %></td>
        <td><%= link_to t('util.edit'), edit_admin_user_path(user) %></td>
        <td><%= link_to t('util.destroy'), admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

