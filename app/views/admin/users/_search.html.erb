<%= form_tag admin_users_path, :id => 'searchForm',  :method => 'get', :class => 'ui middle aligned two column doubling grid' do %>
  <div class="ui inline checkboxes column">
    <% @roles.each do |role| %>
      <div class="ui checkbox">
        <%= check_box_tag 'role_ids[]', role, params[:role_ids].include?(role) %>
        <%= label_tag role, t("roles.plural.#{role}")%>
      </div>
    <% end %>
  </div>

  <div class="auto-margins column">
    <div class="ui action input">
      <input class="ui input" type="text" name="q" value="<%= params[:q] %>">
      <div class="ui selection dropdown">
        <input type="hidden" name="gender">
        <div class="default text"><%= t('activerecord.attributes.user.login') %></div>
        <i class="dropdown icon"></i>
        <div class="menu">
          <div class="item" data-search-type="login">
            <%= t('activerecord.attributes.user.login') %>
          </div>
          <div class="item" data-search-type="email">
            <%= t('activerecord.attributes.user.email') %>
          </div>
          <div class="item" data-search-type="full_name">
            <%= t('activerecord.attributes.user.full_name') %>
          </div>
          <div class="item" data-search-type="3">
            <%= t('activerecord.attributes.user.position') %>
          </div>
        </div>
      </div>
      <div class="ui icon button" id="searchBtn">
        <i class="search icon"></i>
      </div>
    </div>
  </div>  
<% end %>
